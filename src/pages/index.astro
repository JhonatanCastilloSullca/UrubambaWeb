---
import Hero from "@components/Hero.astro";
import Layout from "../layouts/Layout.astro";
import CatalogacionIndex from "@components/index/CatalogacionIndex.astro";
import SectoresGestionIndex from "@components/index/SectoresGestionIndex.astro";
import ComponentesTrabajo from "@components/index/ComponentesTrabajo.astro";
import GaleriaIndex from "@components/index/GaleriaIndex.astro";

const heroProps = {
	titulo: "Catalogación de Inmuebles Urbanos",
	descripcion: `“OPTIMIZACIÓN DEL SISTEMA DE INFORMACIÓN DEL SERVICIO DE CATALOGACIÓN DE INMUEBLES DEL CENTRO HISTÓRICO, DISTRITO, PROVINCIA Y DEPARTAMENTO CUSCO”,<br> donde generamos bases de datos de la catalogación de inmuebles y patrimonio inmaterial del centro histórico.`,
	img: "urubamba-plaza.webp",
	buttons: [
		{ titulo: "Catalogación", link: "/" },
		{ titulo: "Patrimonio Inmaterial", link: "/" },
		{ titulo: "Planimetría", link: "/" },
		{ titulo: "Hatun Qosqo", link: "/" },
	],
};
---

<Layout title="Catalogación Urubamba">
	<main class="w-full mx-auto flex flex-col justify-center items-center">
		<Hero {...heroProps} />
		<CatalogacionIndex />
		<SectoresGestionIndex />
		<ComponentesTrabajo />
		<GaleriaIndex />
	</main>
</Layout>
