---
import {
    Astronav,
    MenuItems,
    MenuIcon,
    Dropdown,
    DropdownItems,
} from "astro-navbar";
---

<header class="lg:flex p-5 gap-5 max-w-7xl mx-auto">
    <Astronav>
        <div class="flex w-full justify-between items-center">
            <a href="/" class="text-lg">
                <img
                    src="https://via.placeholder.com/720x192"
                    alt="Logo-Urubamba"
                    class="w-44 h-10"
                />
            </a>
            <div class="block lg:hidden">
                <MenuIcon class="w-4 h-4 text-gray-800" />
            </div>
        </div>

        <MenuItems class="hidden lg:flex lg:gap-5 mt-2 lg:mt-0">
            <ul class="flex flex-col lg:flex-row lg:gap-3">
                <li class="relative">
                    <a
                        href="/"
                        class="flex items-center px-3 py-2 text-gray-600 hover:text-gray-900 font-medium"
                    >
                        <span> Home</span>
                    </a>
                </li>

                <li class="relative">
                    <Dropdown class="group">
                        <button
                            class="flex items-center px-3 py-2 text-gray-600 hover:text-gray-900 font-medium"
                        >
                            <span class="me-2">Catalogaci贸n</span>
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke-width="3"
                                stroke="currentColor"
                                class="w-3 h-3 mt-0.5 group-open:rotate-180"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
                            </svg>
                        </button>
                        <DropdownItems class="absolute w-96 z-50 mt-2 bg-white">
                            <div
                                class="px-3 lg:py-2 lg:bg-white lg:rounded-md lg:shadow lg:border flex flex-col"
                            >
                                <a
                                    href="/catalogacion"
                                    class="px-3 py-2 text-gray-600 hover:text-gray-900 font-medium"
                                >
                                    Catalogaci贸n Inmuebles Urbanos
                                </a><a
                                    href="/catalogacionInmuebles"
                                    class="px-3 py-2 text-gray-600 hover:text-gray-900 font-medium"
                                >
                                    Catalogaci贸n Inmuebles Religiosos
                                </a><a
                                    href="/catalogacionAmbientesUrbanos"
                                    class="px-3 py-2 text-gray-600 hover:text-gray-900 font-medium"
                                >
                                    Catalogaci贸n Ambientes Urbanos
                                </a>
                            </div>
                        </DropdownItems>
                    </Dropdown>
                </li>
                <li class="relative">
                    <a
                        href="/libro"
                        class="flex items-center px-3 py-2 text-gray-600 hover:text-gray-900 font-medium"
                    >
                        <span> Libros</span>
                    </a>
                </li>
                <li class="relative">
                    <a
                        href="/inmaterial"
                        class="flex items-center px-3 py-2 text-gray-600 hover:text-gray-900 font-medium"
                    >
                        <span> Inmaterial</span>
                    </a>
                </li>
                <li class="relative">
                    <a
                        href="/fototeca"
                        class="flex items-center px-3 py-2 text-gray-600 hover:text-gray-900 font-medium"
                    >
                        <span> Fototeca</span>
                    </a>
                </li>
                <li class="relative">
                    <a
                        href="/gerencia"
                        class="flex items-center px-3 py-2 text-gray-600 hover:text-gray-900 font-medium"
                    >
                        <span> Gerencia</span>
                    </a>
                </li>
            </ul>
        </MenuItems>
    </Astronav>
</header>
