---
interface Button {
    titulo: string;
    link: string;
}

interface Props {
    titulo?: string;
    descripcion?: string;
    img?: string;
    buttons: Button[];
}

const { titulo, descripcion, img, buttons }: Props = Astro.props;
---

<section
    class="relative w-full mx-auto my-auto bg-cover bg-bottom min-h-[60vh] flex"
    style={`background-image: url('${img}');`}
>
    <div class="absolute inset-0 bg-black bg-opacity-50"></div>

    <div
        class="relative z-10 max-w-4xl mx-auto my-auto text-center text-white py-8 md:py-16 px-4 flex flex-col items-center"
    >
        <h1 class="text-3xl md:text-5xl font-extrabold mb-4">
            {titulo}
        </h1>

        <p
            class="max-w-3xl text-sm md:text-md font-light mb-8 text-white"
            set:html={descripcion}
        />

        <div class="flex flex-col md:flex-row justify-center gap-4">
            {
                buttons.map((button) => (
                    <a
                        href={button.link}
                        class="py-2 px-4 text-sm md:text-md font-medium text-white bg-transparent border border-UrubambaPrimaryColor rounded-xl hover:bg-UrubambaPrimaryColor/50 focus:ring-4 focus:ring-UrubambaPrimaryColor/30 focus:outline-none transition-all"
                    >
                        {button.titulo}
                    </a>
                ))
            }
        </div>
    </div>
</section>
