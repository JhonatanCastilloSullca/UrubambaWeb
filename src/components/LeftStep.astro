---
const { number, tittle, description } = Astro.props;
---

<div class="flex intersect-once intersect-quartern justify-between px-10">
    <div class="pt-1 pb-8">
        <p class="text-xl font-bold">{tittle}</p>
        <p
            class="font-medium text-UrubambaSecondaryColor/50 mt-2 text-left text-xs"
        >
            {description}
        </p>
    </div>
    <div class="flex flex-col items-center mr-4 ltr:ml-0 ltr:mr-4">
        <div class="flex items-center justify-center">
            <div
                class="w-10 h-10 p-2 rounded-full border-2 text-center contents"
            >
                <span
                    class="leading-none w-10 h-10 p-2 rounded-full border-2 font-bold text-xl text-UrubambaPrimaryColor dark:text-slate-200 border-UrubambaPrimaryColor dark:border-blue-700"
                >
                    {number}
                </span>
            </div>
        </div>
        <div class="w-px h-full bg-black/10 dark:bg-slate-400/50"></div>
    </div>
</div>
