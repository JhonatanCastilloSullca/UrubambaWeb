{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@lib/*": [
        "src/lib/*"
      ],
      "@iconos/*": [
        "src/iconos/*"
      ]
    },
    "noEmitOnError": false,
    "strict": false, // Desactiva todas las comprobaciones estrictas
    "skipLibCheck": true, // Ignora la comprobación de los archivos de las librerías
    "noUncheckedIndexedAccess": false,
    "noImplicitAny": false
  }
}